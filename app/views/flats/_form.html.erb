<%= simple_form_for @flat do |f| %>
  <%= f.input :name, label: "Name" %>
  <%= f.input :address, label: "Address" %>
  <%= f.input :description, label: "Description" %>
  <%= f.input :price_per_night, label: "Price per night" %>
  <%= f.input :number_of_guests, label: "Number of guests" %>
  <%= f.submit @flat.new_record? ? "Create Flat" : "Update Flat", class: "btn btn-primary" %>
<% end %>
